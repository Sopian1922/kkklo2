#!/bin/sh

#NDK_TOOLCHAIN_ROOT=/opt/android cmake -DWITH_ANDROID:BOOL=ON -DCMAKE_TOOLCHAIN_FILE=../../cmake/Toolchain-Android.cmake -Wdev -DCMAKE_BUILD_TYPE=Debug -DWITH_CUPS=OFF -DWITH_X11=OFF -DWITH_FFMPEG=OFF -DWITH_XKBFILE=OFF -DCMAKE_INSTALL_PREFIX=./bin ../..

LOCAL_ROOT_DIR=$HOME/android/workspace/FreeRDP-android/jni
LOCAL_INCLUDE_DIR=$LOCAL_ROOT_DIR/include
LOCAL_LIB_DIR=$LOCAL_ROOT_DIR/lib

NDK_TOOLCHAIN_ROOT=/opt/android-toolchain cmake \
-DCMAKE_TOOLCHAIN_FILE=$HOME/android/android-cmake/toolchain/android.toolchain.cmake \
-DWITH_ANDROID:BOOL=ON \
-DCMAKE_BUILD_TYPE=Release \
-DALSA_INCLUDE_DIR=$LOCAL_INCLUDE_DIR \
-DALSA_LIBRARY=$LOCAL_LIB_DIR \
-DOPENSSL_ROOT_DIR=$LOCAL_ROOT_DIR \
-DOPENSSL_INCLUDE_DIR=$LOCAL_INCLUDE_DIR \
-DOPENSSL_LIBRARIES=$LOCAL_LIB_DIR \
-DAVCODEC_INCLUDE_DIR=$LOCAL_INCLUDE_DIR \
-DAVCODEC_LIBRARY=$LOCAL_LIB_DIR \
-DAVUTIL_INCLUDE_DIR=$LOCAL_INCLUDE_DIR \
-DAVUTIL_LIBRARY=$LOCAL_LIB_DIR \
-DWITH_CUPS=OFF \
-DWITH_X11=OFF \
-Wdev \
-DCMAKE_INSTALL_PREFIX=./bin \
../..

